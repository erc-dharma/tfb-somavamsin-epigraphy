              <lg n="8" met="mātrā">
                 <l n="ab">tasya<lb n="15"/>tanayeṣu madhye mahānubhāvo maheśvare bhaktaḥ<g type="danda">.</g></l> 
                 <l n="cd">bhagavantam am<choice><orig>v</orig><reg>b</reg></choice>ikāpatim avatāre pūrvajo da<lb n="16" break="no"/>dhau<g type="ddanda">.</g></l>
              </lg> 
               <lg n="9" met="mātrā">
                  <l n="ab">bhagavatī ca sānukampe nija-kula-bhūṣāñ ca pavitari candre<g type="danda">.</g></l> 
                  <l n="cd">pitur āśayasya ca valād ā<lb n="17" break="no"/><unclear>la</unclear>mbhitenendra-rājya-vara-lābhaḥ<g type="ddanda">.</g></l>
               </lg> 
               <lg n="10" met="mālinī">
                  <l n="a">śirasi kr̥ta-śivājñ<choice><sic>ā</sic><corr>o</corr></choice> martya-loke vivasvān</l> 
                  <l n="b">ajani ca kula-putro bhīma<lb n="18" break="no"/>nām ottama-śrīḥ<g type="danda">.</g></l> 
