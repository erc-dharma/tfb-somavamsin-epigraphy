            <pb n="1r"/>
<pb n="1v"/><ab><g type="spiralL"/></ab><lg n="1" met="vasantatilakā">
   <l n="a"><lb n="1"/>Indu<supplied reason="omitted">ḥ</supplied> jaṭāsu viśado ’gniśikhā-piśaṅgī</l> 
   <l n="b">lālāṭa-cakṣuṣi gale viṣabhañjanābham<g type="danda">.</g></l> 
   <l n="c">sattvaṁ rajas tama I<lb n="2" break="no"/>ti triguṇasya tasya</l> 
  <l n="d">sthāna-kramaṅ gatavate ’stu namaḥ śivāya<g type="ddanda">.</g></l>
</lg> 
               <lg n="2" met="śārdūlavikrīḍita">
                  <l n="a">svasti śrīmati yatra saudha-śikhara-nyastai<lb n="3" break="no"/>r atīva-sphurad</l> 
                  <l n="b">bhābhiḥ kāñcana-kumbhakair atiśaya-proddīpita<supplied reason="omitted">ḥ</supplied> vyomani<g type="danda">.</g></l> 
                  <l n="c">lokair utkaṭa-vismaya-vyati<lb n="4" break="no"/>kara-sphārībhaval-locanaiḥ</l> 
                  <l n="d">sthāna-sthāna-gati-krameṇa katham apy ālakṣyate ’ha<supplied reason="omitted">r</supplied>-patiḥ<g type="ddanda">.</g></l>
               </lg> 
               <lg n="3" met="vasantatilakā">
                  <l n="a">prāsāda-mauliṣu<lb n="5"/>karā<choice><orig>v</orig><reg>b</reg></choice>ja-paramparābhir</l> 
                  <l n="b">ākr̥ṣyamāṇa-parilam<choice><orig>v</orig><reg>b</reg></choice>i-nabhaḥ pracāra<choice><sic>ḥ</sic><corr>M</corr></choice><g type="danda">.</g></l> 
                  <l n="c">yasmin niśāsu niśita-dyuti-ca<lb n="6" break="no"/>ndra-vimvam</l> 
                  <l n="d">āyojyate makura-kr̥tya-vidhau vadhūbhiḥ<g type="ddanda">.</g></l>
               </lg> 
               <lg n="4" met="śārdūlavikrīḍita">
                  <l n="a">yasminn aspr̥śataḥ kṣitiṁ khurapuṭai<supplied reason="omitted">r</supplied> vāhā<lb n="7" break="no"/>n asaṁkhyān api</l> 
                  <l n="b">pratyeti sudr̥śī jano na tu rājobhāraiḥ samutsarpibhiḥ<g type="danda">.</g></l> 
                  <l n="c">Anyad yasya ja<lb n="8" break="no"/>lāśa<space type="binding-hole"/>yeṣu yugapad dantāvalānāṅgaṇair</l> 
                 <l n="d">anyonya-pratipanna-ḍiṇḍima-ravair ambhaḥ<!-- HERE --> samu<supplied reason="omitted">t</supplied>pītate<g type="ddanda">.</g></l>
               </lg>
            <lg n="5" met="śārdūlavikrīḍita">
               <l n="a"><lb n="9" break="no"/><space type="binding-hole"/>yad bhūmīvalayasya bhūṣaṇa-vidhi<supplied reason="omitted">r</supplied> yasyāpi saudha-śriyo</l> 
               <l n="b">yat saudhasya mr̥gīdr̥śo<lb n="10"/><unclear>mr̥ga</unclear><space type="binding-hole"/>dr̥śām yad varttinīnānnavaḥ<g type="danda">.</g></l> 
               <l n="c">ya<choice><sic>d</sic><corr>s</corr></choice>yā<supplied reason="omitted">ḥ</supplied> toraṇa-citra-karma-kanaka-graiveyakādi-sphu<lb n="11" break="no"/>ṭam</l> 
               <l n="d">vīthībhūtam athedam apy anumuhuḥ krīḍeti sampaddyate<g type="ddanda">.</g></l>
            </lg> 
            <p>tasmāt śrī-yayāti-nagarāt<supplied reason="omitted">.</supplied></p>
             <lg n="6" met="śikhariṇī">
