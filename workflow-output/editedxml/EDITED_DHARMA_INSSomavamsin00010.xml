                   <l n="c">Ākṣeptā cānumantā ca</l>
                   <l n="d">t<choice><sic>a</sic><corr>ā</corr></choice>ny e<lb n="27" break="no"/>va narak<choice><sic>aṁ</sic><corr>e</corr></choice> vaseT<g type="danda">.</g></l>
               </lg>
             <lg n="4" met="indravajrā"><!-- best_0005 inversion cd -->
                    <l n="a"><choice><sic>Ā</sic><corr>A</corr></choice>gner apatyaṁ prathamaṁ suvarṇṇaṁ</l>
                    <l n="b">bhūr vvaiṣṇavī sūrya-sutāś ca gāvaḥ<g type="danda">.</g><pb n="2v"/></l>
                    <l n="c"><lb n="28"/>yaḥ kāñcanaṁ gāṁ ca mahīñ ca dadyāt</l>
                   <l n="d">dattās trayas tena bhavanti lokāḥ</l>
                    </lg>
              <lg n="5" met="anuṣṭubh"><!-- best_0020 -->
            <l n="a">Āsphoṭayanti pi<lb n="29" break="no"/>taraḥ</l>
            <l n="b">pravalganti pitāmahāḥ<g type="danda">.</g></l>
            <l n="c">bhūmidātā kule jātaḥ</l><!-- Sircar's list : bhūmido 'smat-kule jātaḥ -->
            <l n="d">sa nas trātā bhaviṣyati<g type="ddanda">.</g></l>
                           </lg>
             <lg n="6" met="anuṣṭubh"><!-- best_0029 -->
                <l n="a">bhūmiṁ yaḥ pra<lb n="30" break="no"/>tigr̥hṇāti</l>
                <l n="b">yaś ca bhūmiṁ prayacchati<g type="danda">.</g></l>
                <l n="c">Ubhau tau puṇya-karmmāṇau</l>
                <l n="d">niyataṁ svargga-gāminau</l>
                    </lg>
              <lg n="7" met="anuṣṭubh"><!-- best_0137 -->
                        <l n="a">taḍāgānā<supplied reason="omitted">ṁ</supplied><lb n="31"/>sahasrāṇi</l>
                        <l n="b">vājapeya-śatāni ca</l>
                        <l n="c">gavāṁ koṭi-pradānena</l>
                        <l n="d">bhūmi-hartā na śudhyati</l>
                    </lg>
              <lg n="8" met="anuṣṭubh"><!-- best_0055 -->
                                <l n="a">suvarṇṇam ekaṁ gām e<lb n="32" break="no"/>kāṁ</l>
                                <l n="b">bhūmer apy arddham aṅgulaṁ</l>
                                <l n="c">haran narakam āyāti</l>
                                <l n="d">yāvad—ā-hūta-saṁplavaṁ<g type="danda">.</g></l>
                            </lg>
             <lg n="9" met="anuṣṭubh"><!-- best_0100 -->
                        <l n="a"><choice><sic>Ā</sic><corr>A</corr></choice>nyāyena hr̥tā bhūmir</l><!-- Sircar's list : nyāyenopārjitā bhūmir  -->
                        <l n="b">a<lb n="33" break="no"/>nyāyena tu hāritā</l><!-- Sircar's list : anyāyenāpahāritā -->
                        <l n="c">harato hārayantaś caiva</l><!-- Sircar's list :  haranto hārayantaś ca -->
                        <l n="d">sa hanyātsaptamaṁ kulam</l><!-- Sircar's list : hiṁsanty ā-saptamaṁ kulam -->
                    </lg>
             <lg n="10" met="anuṣṭubh"><!-- best_0064 -->
                        <l n="a">harate hāra<lb n="34" break="no"/>yeta yas tu</l>
                        <l n="b">manda-<choice><orig>v</orig><reg>b</reg></choice>uddhis tamo-vr̥taḥ<g type="danda">.</g></l>
                        <l n="c">sa <choice><orig>v</orig><reg>b</reg></choice>addho vāruṇaiḥ pāśai<surplus>ḥ</surplus>s</l>
                        <l n="d">tiryag-yoniṁ ca ga<lb n="35" break="no"/>cchati<g type="danda">.</g></l>
                    </lg>
             <lg n="11" met="anuṣṭubh"><!-- best_0132_00 -->
                        <l n="a">sva-dattāṁ para-dattāṁ vā</l>
                        <l n="b">yo hare<choice><sic>d</sic><corr>ta</corr></choice> vasundharāṁ</l>
                        <l n="c">sa viṣṭhāyāṁ kr̥mir bh<choice><sic>u</sic><corr>ū</corr></choice>tvā</l>
                        <l n="d">pacyate pi<lb n="36" break="no"/>tr̥bhiḥ saha<g type="danda">.</g></l>
                    </lg>
              <lg n="12" met="anuṣṭubh"><!-- best_0004 -->
                        <l n="a">Ādityo varuṇo viṣṇur</l>
                        <l n="b"><choice><orig>v</orig><reg>b</reg></choice>rahmā somo hutāśanaḥ</l>
                        <l n="c">śūlapāṇiś tu bhagavān</l>
                        <l n="d">abhina<lb n="37" break="no"/>ndanti bhūmidaṁ<g type="danda">.</g></l>
                </lg>
                <lg n="13" met="śālinī"><!-- best_0117 -->
                    <l n="a">sāmānyo ’yaṁ dharmma-setur nr̥pāṇāṁ</l>
                    <l n="b">kāle kāle pālanīyo bhavadbhiḥ</l>
                    <l n="c">sarvān e<lb n="38" break="no"/>tān bhāvinaḥ pārthivendrān</l>
