             <pb n="1v"/>
             
             
             
            <ab><lb n="1"/><g type="spiralL"/> Om</ab><!-- for the moment I reproduce Srinivasan's EI37edition and put in commentary the readings of Shastri's edition    -->
            <lg n="1" met="śārdūlavikrīḍita">
               <l n="a">svasti prema-niruddha-mugdha-manasoḥ sphārībhavac-cakṣuṣor</l>
               <l n="b">yūnor yatra <unclear>vici</unclear><lb n="2" break="no"/>tra-nirbhara-rata-krīḍā-kraman tanvatoḥ<g type="danda">.</g></l>
               <l n="c">vicchinno ’pi kr̥tātimātra-pulakair āvirbhavat-sītkr̥<lb n="3" break="no"/>tair</l>
               <l n="d">āśleṣair glapita-klamaiḥ smara-rasaḥ<!-- Shastri smarasarasaḥ --> kāmaṁ muhus tāpyate<!-- Shastri °tāyyate --><g type="ddanda">.</g></l>
             </lg>
             <lg n="2" met="śārdūlavikrīḍita">
                  <l n="a">yatrāśeṣa-viśeṣa-rū<lb n="4" break="no"/>pa-mahimāpāstāpsaraḥ kāntibhir</l>
                  <l n="b">jjāter<choice><sic>pyā</sic><corr>ṣyā</corr></choice>-kalaheṣv api praṇayinaḥ ka<supplied reason="omitted">r</supplied>ṇṇotpalais tāḍi<lb n="5" break="no"/>tāḥ<g type="danda">.</g></l>
                  <l n="c">jāyante praviśat-sita-smara-śara-protthāpitāntar-vyathā<supplied reason="omitted">ḥ</supplied></l>
                  <l n="d">syandi-sveda-jalāvaseca<lb n="6" break="no"/>na-vaśā<choice><sic>nv</sic><corr>n n</corr></choice>irjjāta-romāṅkurāḥ<g type="ddanda">.</g></l>
               </lg>
            <lg n="3" met="śārdūlavikrīḍita">
                <l n="a">Atyuttuṅga-karīndra-danta-musala-prodbhāsi-rociś cayair</l>
                <l n="b">dhvānta<lb n="7" break="no"/>-dhva<choice><orig>n</orig><reg>ṁ</reg></choice>sana-niṣphalīkr̥ta-śarac-candrodayaiḥ sarvvadā<g type="danda">.</g></l>
                <l n="c">yatrāsīd asatī-janasya vi<choice><orig>s</orig><reg>ś</reg></choice>adaṁ muktā<lb n="8" break="no"/>mayaṁ maṇḍanaṁ</l>
                <l n="d">saṅketāspadam apy atīva dhavala<supplied reason="omitted">ṁ</supplied> prāsāda-śr̥ṅgāgrataḥ<g type="ddanda">.</g></l>
            </lg>
            <lg n="4" met="upajāti">
                <l n="a">mahānadī-tuṅga-ta<lb n="9" break="no"/>raṅga-bhaṅga</l>
                <l n="b">-sphārocchalac-chīkaravadbhir ārat<surplus>a</surplus></l>
                <l n="c">yasmin ratāsaktimad-aṅganānāṁ</l>
                <l n="d">śramāpano<lb n="10" break="no"/>daḥ kriyate marudbhiḥ<g type="ddanda">.</g></l>
            </lg>
            <ab>tasmāt śrī-yayāti-nagarāt<g type="danda">.</g></ab>
             <lg n="5" met="vasantatilakā">
                <l n="a">loka-traya-prathita-śubhra-yaśo<lb n="11" break="no"/>-vitāna</l>
                <l n="b">-vyāptāṣṭa-dik-prasabha-nirjjita-vairi-varggaḥ<g type="danda">.</g></l>
                <l n="c">somānvaye kila <choice><orig>v</orig><reg>b</reg></choice>abhūva sugītā-kīrtti<lb n="12" break="no"/>ḥ</l><!-- SV19 : rājā vabhūva bhuvi bhāvita-bhavya-mūrttiḥ -->
                <l n="d">śrīmān saroja-vadano nṛpatir <persName>yayātiḥ</persName><g type="ddanda">.</g></l><!-- SV19 : janamejayākhyaḥ -->
            </lg>
              <lg n="6" met="śārdūlavikrīḍita">
                <l n="a">yat-khaḍgāgra-vipāṭita-dvipa-ghaṭā-kumbha<lb n="13" break="no"/>-sthalād ullasan</l>
                <l n="b">muktā-jāla-vibhūṣitaṁ prati-raṇaṁ pr̥thvī-vadhūraḥsthalaṁ</l>
                <l n="c"><choice><orig>s</orig><reg>ś</reg></choice>a<choice><orig>s</orig><reg>ś</reg></choice>vad-d<choice><sic>a</sic><corr>ū</corr></choice>ra<!-- SV19 dvāra -->-naman-narādhipa<lb n="14" break="no"/>-śiroratnāṅśu-jālāmalā</l>
                <l n="d">yat-pādām<choice><sic>m</sic><corr>b</corr></choice>uja-reṇavaḥ samatayā tad-ra<choice><orig>s</orig><reg>ś</reg></choice>mi-lakṣmīn dadhuḥ<g type="ddanda">.</g></l>
            </lg>
             <lg n="7" met="sragdhāra">
                <l n="a">mādyal-lo<lb n="15" break="no"/>lāli-mālākula-karaṭa-puṭā-syandi-dāna-pravāhān</l>
                <l n="b">sindūrārakta-kumbhān sita-pr̥thula
                    <pb n="2r" break="no"/>
                    <lb n="16" break="no"/>-radān<g type="danda">.</g> kāmadevādisaṁjñāN<g type="danda">.</g></l>
                <l n="c">jitvājāpālam ājau janita-sura-vadhū-vismaya-smera-vaktraḥ</l>
                <l n="d">sa dvā<lb n="17" break="no"/>tri<choice><orig>ṅ</orig><reg>ṁ</reg></choice>śat ka<!-- SV19 khaḍgī triṁśa-ke  -->rīndrān śara-nikara-hatārohakān agrahīd yaḥ<g type="ddanda">.</g></l>
            </lg>
             <lg n="8" met="śārdūlavikrīḍita">
                 <l n="a">tasmāt vismaya-hetu-heti-laḍita-prastāvanāka<lb n="18" break="no"/><supplied reason="omitted">r</supplied>ṇṇanair</l>
                 <l n="b">ddhūtā-kamputa-pūrvva-rudra-mukuṭa-prītendru-nirvarṇṇitaḥ<g type="danda">.</g></l>
                 <l n="c">bhrāmyat-kī<supplied reason="omitted">r</supplied>ttir ajāyat āhava-hata-sva <lb n="19" break="no"/>-sthāri-gītodayaḥ </l>
                 <l n="d">śrīmān <persName>bhīmaratho</persName> yataḥ svam udaran tārācirād arcchati<g type="ddanda">.</g></l>
             </lg>
             <lg n="9" met="śārdūlavikrīḍita">
                 <l n="a">yaḥ kavyāmṛta-nirjhara<lb n="20" break="no"/>sya mahataḥ sotā mahībhṛt-patis </l>
                 <l n="b">tyāgaḥ satyam iti dvaya<supplied reason="omitted">ṁ</supplied> kali-bhayād abhyetya yam modate<g type="danda">.</g></l>
                 <l n="c">yat ke<lb n="21" break="no"/>li-jvalitāndhra-gauḍa-nagarī-dhūmāvalī-ṭhaukitām </l>
                 <l n="d"><choice><orig>v</orig><reg>b</reg></choice>ibhrad-bhāti masīm vidhu<supplied reason="omitted">r</supplied> nnija-kula-kala<lb n="22" break="no"/>ṅkīkṛtaḥ<g type="ddanda">.</g></l>
             </lg>
             <lg n="10" met="śārdūlavikrīḍita">
                 <l n="a">yo dharmeṇa ca vikrameṇa ca dhiyā cāścarya-kāryeṇa ca </l>
                 <l n="b">prāgalbhyena ca deva-rāja-pada<lb n="23" break="no"/>vīṁ prāpto mahī-maṇḍale<g type="danda">.</g></l>
                 <l n="c">sa śrī-dharmmarathas tato rinivaha-dhvansaika-hetuḥ kṛtī </l>
                 <l n="d">dānāna<lb n="24" break="no"/>ndita-vandi-vṛnda-mukhara-kṣmā-maṇḍalo jātavān<g type="ddanda">.</g></l>
             </lg>

             <p>
                 <roleName>parama-māheśvara</roleName>-<roleName>parama-bha<lb n="25" break="no"/>ṭṭāraka</roleName>-<roleName>mahārājadhirāja</roleName>-<roleName>parameśvara</roleName>-soma-kula-tilaka-<roleName>trikaliṅgādhipati</roleName>-<roleName>śrī</roleName>-<persName>mahā<lb n="26" break="no"/>bhavaguta</persName>-pādānudhyāta-<roleName>parama-māheśvara</roleName>-<roleName>parama-bhaṭṭāraka</roleName>-<roleName>mahārājadhi<lb n="27" break="no"/>rāja</roleName>-<roleName>parameśvara</roleName>-soma-kula-tilaka-<roleName>trikaliṅgādhipati</roleName>-<roleName>śrī</roleName>-<persName>mahāśivagupta</persName>-<roleName>rājade<lb n="28" break="no"/>vaḥ</roleName> kuśalī Antaruda-viṣayas<supplied reason="omitted">y</supplied>a Abhayanā-khaṇḍīya bhilvi-grāme<g type="danda">.</g> Atasad-viṣyayīya <choice><orig>v</orig><reg>b</reg></choice>rā<lb n="29"/>hmaṇān <unclear>sa</unclear><supplied reason="omitted">ṁ</supplied>pūjya samāhartr̥-sannidhātṛ-niyuktādhikārika-dāṇḍapā<choice><sic>s</sic><corr>ś</corr></choice>ika-piśuna-vetrikvarodha<lb n="30" break="no"/>jana-rājñī-rāṇaka-rājaputra-rājavallabha-bhogijana-pramukha-samasta-janadpadān<surplus>a</surplus> samājñā<lb n="31" break="no"/>payati<g type="danda">.</g> viditam astu bhavatām yathāsmābhir aya<supplied reason="omitted">ṁ</supplied> grāmaḥ sa-pratīhāraḥ andhāruvī-padāti
                 <pb n="2v" break="no"/>
                 <lb n="32" break="no"/>jīvya-nastidaṇḍa-vara<choice><orig>v</orig><reg>b</reg></choice>alīvardda-ciṅgola-Adattādi-sahitaḥ sa-nidhiḥ sopani<lb n="33" break="no"/>dhiḥ sa<supplied reason="omitted">r</supplied>vva-<choice><orig>v</orig><reg>b</reg></choice>ādhā-varjitaḥ sarvvoparikarādana-sametaś catuḥsīmā-paryantaḥ sāmra-madhū<lb n="34" break="no"/>kaḥ sa-garttoṣaras sa-jala-sthalaḥ kaśyapa-sagotrāya<g type="danda">.</g> tryārṣa-pravarāya<g type="danda">.</g> dāmo<lb n="35" break="no"/>dara-pautrāya<g type="danda">.</g> vāsuputrāya<g type="danda">.</g> rāṇa-śrī-Abhimanyu-namne<g type="danda">.</g> salila-dhārā-purassara<supplied reason="omitted">ṁ</supplied><g type="danda">.</g> Ā<lb n="36" break="no"/>candra-tārakārkka-kṣiti-samakālopabhogārtham mātāpitror ātmanaś ca puṇya-yaśo<lb n="37" break="no"/>’bhivr̥ddhaye<g type="danda">.</g> sa-pratīhāreṇa tāmra-śāsanenākarīkr̥tya pratipādita Ity avagatya s<surplus>v</surplus>a<lb n="38" break="no"/>mucita-kara-bhoga-bhāgādikam upanayadhir bhavadbhiḥ sukhena prativastavyam iti<g type="danda">.</g> bhā<lb n="39" break="no"/>vibhiś ca bhūpatibhir ddattir iyam asmadīyā<g type="danda">.</g> dharmma-gauravād asmad anurodhā<lb n="40" break="no"/>c ca sva-dattir ivānupālanīyā<g type="danda">.</g> tathā coktaṁ dharmmaśastre<g type="danda">.</g>
             </p>
